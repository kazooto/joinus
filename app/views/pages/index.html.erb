<h1>Pages#index</h1>

<table border="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Datetime</th>
      <th>End Datetime</th>
      <th>Place</th>
      <th>Content</th>
      <th>Participation Limit</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_datetime %></td>
        <td><%= event.end_datetime %></td>
	<td><%= event.place %></td>
	<td><%= event.content %></td>
	<td><%= event.participation_limit %></td>
        <td><%= link_to 'Show', event, :class =>"btn" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), :class =>"btn" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, :class => "btn"%>

